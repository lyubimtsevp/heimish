{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Заказ",
    "description": "Заказы клиентов"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "orderNumber": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "customerName": {
      "type": "string",
      "required": true
    },
    "customerEmail": {
      "type": "email"
    },
    "customerPhone": {
      "type": "string",
      "required": true
    },
    "deliveryAddress": {
      "type": "text"
    },
    "deliveryCity": {
      "type": "string"
    },
    "deliveryMethod": {
      "type": "enumeration",
      "enum": ["Курьер", "Самовывоз", "Почта"],
      "default": "Курьер"
    },
    "paymentMethod": {
      "type": "enumeration",
      "enum": ["Картой", "Наличные", "Онлайн"],
      "default": "Картой"
    },
    "status": {
      "type": "enumeration",
      "enum": ["Новый", "Подтверждён", "В обработке", "Отправлен", "Доставлен", "Отменён"],
      "default": "Новый"
    },
    "items": {
      "type": "json"
    },
    "subtotal": {
      "type": "decimal"
    },
    "deliveryPrice": {
      "type": "decimal",
      "default": 0
    },
    "discount": {
      "type": "decimal",
      "default": 0
    },
    "total": {
      "type": "decimal",
      "required": true
    },
    "notes": {
      "type": "text"
    },
    "trackingNumber": {
      "type": "string"
    }
  }
}
