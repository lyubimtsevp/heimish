{
  "kind": "collectionType",
  "collectionName": "reviews",
  "info": {
    "singularName": "review",
    "pluralName": "reviews",
    "displayName": "Отзыв"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "author": {
      "type": "string",
      "required": true
    },
    "rating": {
      "type": "integer",
      "min": 1,
      "max": 5,
      "default": 5
    },
    "text": {
      "type": "richtext"
    },
    "product": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::product.product",
      "inversedBy": "reviews"
    },
    "avatarImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "avatarUrl": {
      "type": "string"
    },
    "photos": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["images"]
    },
    "isApproved": {
      "type": "boolean",
      "default": false
    }
  }
}
